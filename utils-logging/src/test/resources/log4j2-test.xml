<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="XMLConfig" packages="com.asynchrony">
    <Appenders>
        <ScriptAppenderSelector name="SelectIt">
            <Script language="JavaScript"><![CDATA[
                importPackage(java.lang);
                System.getProperty("os.name").search("Windows") > -1 ? "STDOUT" : "MySyslogAppender";]]>
            </Script>
            <AppenderSet>
                <Console name="STDOUT">
                    <PatternLayout pattern="%date{ISO8601}.%nano [%thread] %highlight{%-5level} %logger{30} - %msg%n%throwable{none}"/>
                </Console>
                <List name="LIST" />
            </AppenderSet>
        </ScriptAppenderSelector>
    </Appenders>

    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="SelectIt" />
        </Root>
    </Loggers>
</Configuration>